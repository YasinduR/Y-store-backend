{
  "compilerOptions": {
    "target": "ES2020",                  // Use a modern JavaScript version
    "module": "commonjs",                // CommonJS modules for Node.js
    "strict": true,                      // Enable all strict type-checking options
    "esModuleInterop": true,             // Allows default importing of CommonJS modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"                   // Output directory for compiled files
  },
  "include": ["src/**/*.ts"],            // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]            // Exclude node_modules
}